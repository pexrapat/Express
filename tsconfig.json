{
  "compilerOptions": {
    "target": "esnext",         // Support latest ECMAScript
    "module": "commonjs",       // CommonJS modules for Jest
    "esModuleInterop": true,    // Enable ES module interop
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
